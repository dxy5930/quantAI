# 测试环境配置
NODE_ENV=test
PORT=3002
API_PREFIX=api/v1

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=test_password
DB_DATABASE=chaogu_test

# JWT配置
JWT_SECRET=test_jwt_secret_key_for_testing_environment_87654321
JWT_EXPIRES_IN=2h

# CORS配置
CORS_ORIGIN=http://localhost:5174,http://test.chaogu.com

# 限流配置
