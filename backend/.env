# 应用程序配置
PORT=3001
NODE_ENV=production

# 数据库配置
DATABASE_URL=mysql://root:password@localhost:3306/chaogu
DB_HOST=localhost
DB_PORT=3366
DB_USERNAME=root
DB_PASSWORD=restosuite
DB_DATABASE=chaogu

# JWT配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# CORS配置
# 开发环境- 支持局域网访问，可以设置为 * 或具体的IP地址
CORS_ORIGIN=*
# 生产环境建议设置具体的前端域名，例如：
# CORS_ORIGIN=http://localhost:5173,http://192.168.1.100:5173

# API前缀配置
# 全局API前缀（默认值：api/v1）
API_PREFIX=api/v1

# 模块特定前缀（可选，如果不设置将使用全局前缀）
API_PREFIX_AUTH=api/v1/auth
API_PREFIX_USERS=api/v1/users
API_PREFIX_STRATEGIES=api/v1/strategies
API_PREFIX_BACKTEST=api/v1/backtest
API_PREFIX_STOCKS=api/v1/stocks

# 未来扩展的模块前缀示例
# API_PREFIX_ADMIN=api/v1/admin
# API_PREFIX_PUBLIC=api/public
# API_PREFIX_INTERNAL=api/internal/v1
# API_PREFIX_WEBHOOK=api/webhook/v1
# API_PREFIX_NOTIFICATION=api/v1/notification
# API_PREFIX_ANALYTICS=api/v1/analytics

# 版本控制示例
# API_PREFIX_V1=api/v1
# API_PREFIX_V2=api/v2
# API_PREFIX_BETA=api/beta

# 环境特定前缀示例
# 开发环境：API_PREFIX=api/dev/v1
# 测试环境：API_PREFIX=api/test/v1
# 生产环境：API_PREFIX=api/v1 

# Python分析服务配置
PYTHON_SERVICE_URL=http://localhost:8000
PYTHON_SERVICE_HOST=localhost
PYTHON_SERVICE_PORT=8000
PYTHON_SERVICE_PROTOCOL=http
PYTHON_API_PREFIX=/api
