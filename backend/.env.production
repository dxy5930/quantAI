NODE_ENV=production
PORT=3000
API_PREFIX=api/v1
DB_HOST=prod-db.chaogu.com
DB_PORT=3306
DB_USERNAME=chaogu_prod
DB_PASSWORD=CHANGE_THIS_PRODUCTION_PASSWORD
DB_DATABASE=chaogu_prod
JWT_SECRET=CHANGE_THIS_PRODUCTION_JWT_SECRET_KEY_MUST_BE_VERY_SECURE
JWT_EXPIRES_IN=1h
CORS_ORIGIN=https://chaogu.com,https://www.chaogu.com
THROTTLE_TTL=60
THROTTLE_LIMIT=20
LOG_LEVEL=error
LOG_FILE=logs/app-prod.log
CACHE_TTL=3600
CACHE_MAX=10000
ENABLE_SWAGGER=false
ENABLE_DEBUG=false
ENABLE_TEST_DATA=false
MAIL_HOST=smtp.chaogu.com
MAIL_PORT=587
MAIL_USER=noreply@chaogu.com
MAIL_PASS=CHANGE_THIS_PRODUCTION_MAIL_PASSWORD
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/chaogu.crt
SSL_KEY_PATH=/etc/ssl/private/chaogu.key
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
HEALTH_CHECK_ENDPOINT=/health
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=300000

# Python分析服务配置
PYTHON_SERVICE_URL=http://localhost:8000
PYTHON_SERVICE_HOST=localhost
PYTHON_SERVICE_PORT=8000
PYTHON_SERVICE_PROTOCOL=https
PYTHON_API_PREFIX=/api
