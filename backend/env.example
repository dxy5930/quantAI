# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=chaogu

# 开发环境配置
NODE_ENV=development
PORT=3001

# JWT配置
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# 数据库行为控制
DB_SYNCHRONIZE=false  # 是否自动同步数据库表结构（生产环境建议false）
DB_LOGGING=true       # 是否打印SQL日志
DB_DROP_SCHEMA=false  # 是否每次启动时删除并重建数据库（仅开发环境）

# API配置
API_PREFIX=/api/v1

# 前端URL（用于CORS）
CORS_ORIGIN=http://localhost:5174

# Python分析服务
PYTHON_SERVICE_URL=http://localhost:8000
PYTHON_SERVICE_TIMEOUT=300000  # 5分钟超时（毫秒）
PYTHON_SERVICE_RETRIES=2       # 重试次数

# 限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=20 